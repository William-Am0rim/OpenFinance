datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  created_at DateTime  @default(now())
  updated_at DateTime?

  fixed_expense Fixed_expense[]

  @@map("users")
}

model Group {
  id         Int       @id @default(autoincrement())
  name       String
  type       String
  created_at DateTime  @default(now())
  updated_at DateTime?

  @@map("groups")
}

model Fixed_expense {
  id         Int       @id @default(autoincrement())
  name       String
  userId     String
  created_at DateTime  @default(now())
  updated_at DateTime?
  
  User       User      @relation(fields: [userId], references: [id])

  @@map("fixed_expenses")
}
